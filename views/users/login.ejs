<% layout("/layouts/boilerplate") %>

<!-- divided the page into rows and columns -->
<div class="row mt-3">
    <h1 class="col-6 offset-3"> Let's LogIn</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post"
              class="needs-validation" novalidate>

            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" 
                    name="username" 
                    id="username"
                    class="form-control"
                    required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="text" 
                    name="password" 
                    id="password"
                    class="form-control"
                    required>                
            </div>

            <button class="btn btn-success">Log In</button>
            

        </form>
    </div>
</div>